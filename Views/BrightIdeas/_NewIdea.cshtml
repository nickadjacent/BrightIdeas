@model BrightIdea

<div class="container mt-5">
    <form asp-controller="BrightIdeas" asp-action="Create" method="POST" class="form-group row">
        <div class="col-sm-8 col-form-label">
            <label for="Idea"></label>
            <span class="text-danger font-weight-bold" asp-validation-for="Idea"></span>
            <input asp-for="Idea" class="col-sm-11 col-form-label" placeholder="post something witty here...">
        </div>
        <button class="btn btn-outline-dark col-sm-2 m-3">Add Idea!</button>
    </form>
</div>